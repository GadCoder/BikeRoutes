{
  "version": 8,
  "name": "BikeRoutes Lima - Apple-ish Warm",
  "center": [-77.0428, -12.0464],
  "zoom": 12,
  "pitch": 0,
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "lima": {
      "type": "vector",
      "tiles": ["https://tiles-bikeroutes.gadcoder.com/data/lima/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 15
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f6f5f2" }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "lima",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "wood",
          "#d7e8d9",
          "grass",
          "#e4efe6",
          "scrub",
          "#dbeadd",
          "#f2f1ed"
        ],
        "fill-opacity": 0.8
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "lima",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "residential",
          "#f0eee9",
          "commercial",
          "#e8e6e0",
          "industrial",
          "#e8e6e0",
          "cemetery",
          "#d7e8d9",
          "school",
          "#f0ece3",
          "hospital",
          "#f5e8e6",
          "stadium",
          "#e8e8f0",
          "#f6f5f2"
        ],
        "fill-opacity": 0.9
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "lima",
      "source-layer": "park",
      "paint": { "fill-color": "#d7f0df", "fill-opacity": 0.85 }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "lima",
      "source-layer": "water",
      "paint": { "fill-color": "#d6ecff", "fill-opacity": 0.9 }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "lima",
      "source-layer": "waterway",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#9ecdf6",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 0.5, 14, 1.8]
      }
    },
    {
      "id": "boundary",
      "type": "line",
      "source": "lima",
      "source-layer": "boundary",
      "layout": { "line-join": "round" },
      "paint": {
        "line-color": "#c4c2bb",
        "line-width": 1,
        "line-dasharray": [2, 2],
        "line-opacity": 0.2
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "lima",
      "source-layer": "building",
      "minzoom": 14,
      "paint": {
        "fill-color": "#e7e5df",
        "fill-opacity": 0.7,
        "fill-outline-color": "rgba(0,0,0,0.04)"
      }
    },
    {
      "id": "road-casing",
      "type": "line",
      "source": "lima",
      "source-layer": "transportation",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(0, 0, 0, 0.07)",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1.6, 14, 8.0, 16, 13.5],
        "line-opacity": 1
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "lima",
      "source-layer": "transportation",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10,
          ["match", ["get", "class"], "motorway", 2.0, "trunk", 1.8, "primary", 1.5, "secondary", 1.0, 0.4],
          14,
          ["match", ["get", "class"], "motorway", 5.5, "trunk", 5.0, "primary", 4.5, "secondary", 3.5, 1.6],
          16,
          ["match", ["get", "class"], "motorway", 9.0, "trunk", 8.0, "primary", 7.0, "secondary", 5.5, 2.5]
        ],
        "line-opacity": 1
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "lima",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": ["get", "name"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 12, 9, 16, 11],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line",
        "text-anchor": "center",
        "text-letter-spacing": 0.05
      },
      "paint": {
        "text-color": "#9ca3af",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-label",
      "type": "symbol",
      "source": "lima",
      "source-layer": "place",
      "minzoom": 10,
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name:en"], ["get", "name"]],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 13, 15, 18],
        "text-allow-overlap": false
      },
      "paint": {
        "text-color": "#1f2937",
        "text-halo-color": "rgba(255,255,255,0.95)",
        "text-halo-width": 1.4
      }
    },
    {
      "id": "poi-label",
      "type": "symbol",
      "source": "lima",
      "source-layer": "poi",
      "minzoom": 15,
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name:en"], ["get", "name"]],
        "text-font": ["Noto Sans Regular"],
        "text-size": 11,
        "text-allow-overlap": false
      },
      "paint": {
        "text-color": "#6b7280",
        "text-halo-color": "rgba(255,255,255,0.95)",
        "text-halo-width": 1.0
      }
    }
  ]
}
