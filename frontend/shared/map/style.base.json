{
  "version": 8,
  "name": "BikeRoutes Lima",
  "center": [-77.0428, -12.0464],
  "zoom": 12,
  "pitch": 0,
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "lima": {
      "type": "vector",
      "tiles": ["https://tiles-bikeroutes.gadcoder.com/data/lima/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 15
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f8fafc" }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "lima",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "wood",
          "#bbf7d0",
          "grass",
          "#dcfce7",
          "scrub",
          "#d1fae5",
          "#f1f5f9"
        ],
        "fill-opacity": 0.9
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "lima",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "residential",
          "#f1f5f9",
          "commercial",
          "#e2e8f0",
          "industrial",
          "#e2e8f0",
          "cemetery",
          "#d1fae5",
          "school",
          "#e0f2fe",
          "hospital",
          "#fee2e2",
          "stadium",
          "#e0e7ff",
          "#f8fafc"
        ],
        "fill-opacity": 0.95
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "lima",
      "source-layer": "park",
      "paint": { "fill-color": "#bbf7d0", "fill-opacity": 0.75 }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "lima",
      "source-layer": "water",
      "paint": { "fill-color": "#cfe8ff", "fill-opacity": 0.95 }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "lima",
      "source-layer": "waterway",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#60a5fa",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 0.6, 14, 2.2]
      }
    },
    {
      "id": "boundary",
      "type": "line",
      "source": "lima",
      "source-layer": "boundary",
      "layout": { "line-join": "round" },
      "paint": {
        "line-color": "#94a3b8",
        "line-width": 1,
        "line-dasharray": [2, 2],
        "line-opacity": 0.5
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "lima",
      "source-layer": "building",
      "minzoom": 14,
      "paint": {
        "fill-color": "#e5e7eb",
        "fill-opacity": 0.6,
        "fill-outline-color": "rgba(148,163,184,0.3)"
      }
    },
    {
      "id": "road-casing",
      "type": "line",
      "source": "lima",
      "source-layer": "transportation",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "rgba(15, 23, 42, 0.25)",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1.2, 14, 7.0, 16, 12.0],
        "line-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0.05,
          14, 0.18,
          16, 0.25
        ]
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "lima",
      "source-layer": "transportation",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": [
          "match",
          ["get", "class"],
          "motorway", "#f59e0b",
          "trunk", "#f59e0b",
          "primary", "#f1f5f9",
          "secondary", "#f8fafc",
          "tertiary", "#ffffff",
          "minor", "#ffffff",
          "service", "#ffffff",
          "path", "#94a3b8",
          "track", "#94a3b8",
          "rail", "#64748b",
          "#ffffff"
        ],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10,
          ["match", ["get", "class"], "motorway", 2.2, "trunk", 2.0, "primary", 1.8, "secondary", 1.4, 0.8],
          14,
          ["match", ["get", "class"], "motorway", 6.0, "trunk", 5.5, "primary", 5.0, "secondary", 4.0, 2.2],
          16,
          ["match", ["get", "class"], "motorway", 10.0, "trunk", 9.0, "primary", 8.0, "secondary", 6.0, 3.0]
        ],
        "line-opacity": 0.95
      }
    },
    {
      "id": "bike-path-accent",
      "type": "line",
      "source": "lima",
      "source-layer": "transportation",
      "filter": ["in", ["get", "class"], ["literal", ["path", "cycleway"]]],
      "paint": {
        "line-color": "#22c55e",
        "line-width": ["interpolate", ["linear"], ["zoom"], 12, 1.2, 16, 3],
        "line-opacity": 0.6
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "lima",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": ["get", "name"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 12, 10, 16, 12],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line",
        "text-anchor": "center",
        "text-letter-spacing": 0.05
      },
      "paint": {
        "text-color": "#64748b",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-label",
      "type": "symbol",
      "source": "lima",
      "source-layer": "place",
      "minzoom": 10,
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name:en"], ["get", "name"]],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 13, 14, 18],
        "text-allow-overlap": false
      },
      "paint": {
        "text-color": "#0f172a",
        "text-halo-color": "rgba(255,255,255,0.9)",
        "text-halo-width": 1.4
      }
    },
    {
      "id": "poi-label",
      "type": "symbol",
      "source": "lima",
      "source-layer": "poi",
      "minzoom": 15,
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name:en"], ["get", "name"]],
        "text-font": ["Noto Sans Regular"],
        "text-size": 12,
        "text-allow-overlap": false
      },
      "paint": {
        "text-color": "#64748b",
        "text-halo-color": "rgba(255,255,255,0.9)",
        "text-halo-width": 1.0
      }
    }
  ]
}
